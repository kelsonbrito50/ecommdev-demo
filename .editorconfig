# .editorconfig — ECOMMDEV
# See https://editorconfig.org for documentation

root = true

# ─── Defaults (all files) ────────────────────────────────────────────────────
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# ─── Python ──────────────────────────────────────────────────────────────────
[*.py]
indent_size = 4
max_line_length = 88

# ─── HTML / Django Templates ─────────────────────────────────────────────────
[*.html]
indent_size = 2

# ─── JSON ────────────────────────────────────────────────────────────────────
[*.json]
indent_size = 2

# ─── YAML / GitHub Actions / Docker Compose ──────────────────────────────────
[*.{yml,yaml}]
indent_size = 2

# ─── JavaScript / CSS ────────────────────────────────────────────────────────
[*.{js,ts,jsx,tsx}]
indent_size = 2

[*.{css,scss,less}]
indent_size = 2

# ─── Markdown ────────────────────────────────────────────────────────────────
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# ─── Shell scripts ───────────────────────────────────────────────────────────
[*.sh]
indent_size = 2

# ─── Dockerfile ──────────────────────────────────────────────────────────────
[Dockerfile*]
indent_size = 4

# ─── Makefile (tabs required) ────────────────────────────────────────────────
[Makefile]
indent_style = tab

# ─── Nginx config ────────────────────────────────────────────────────────────
[*.conf]
indent_size = 4

# ─── .po translation files ───────────────────────────────────────────────────
[*.po]
indent_size = 2
