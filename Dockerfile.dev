# ECOMMDEV - Development Dockerfile
# Installs full dev dependencies (debug toolbar, test tools, linters).
# NEVER bake .env or secrets into this image â€” pass them at runtime via --env-file.

FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    gettext \
    && rm -rf /var/lib/apt/lists/*

# Environment variables (no secrets here)
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    DJANGO_SETTINGS_MODULE=ecommdev.settings

# Install Python dependencies (dev includes prod via -r requirements.txt)
COPY requirements.txt requirements-dev.txt ./
RUN pip install --upgrade pip && \
    pip install -r requirements-dev.txt

# Copy application code (secrets excluded via .dockerignore: .env, .env.*)
COPY . .

# Expose port
EXPOSE 8000

# Run development server
CMD ["python", "manage.py", "runserver", "0.0.0.0:8000"]
